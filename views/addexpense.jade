extends layout

block content
  .row.banner
    .col-12
      h1 Add New Expense
      p Please fill out the form below to keep track of your expenses easily and efficiently.

  .row
    .col-12.col-md-8
      form(action="/expenses", method="post", role="form")
        .form-group.row
          label.col-10.col-sm-3.col-form-label(for="description") Description
          .col-12.col-sm-9
            input#description.form-control(name="description", placeholder="e.g., Coffee at Starbucks", required)

        .form-group.row
          label.col-10.col-sm-3.col-form-label(for="amount") Amount
          .col-12.col-sm-9
            input#amount.form-control(type="number", name="amount", step="0.01", placeholder="e.g., 5.00", required)

        .form-group.row
          label.col-10.col-sm-3.col-form-label(for="date") Date
          .col-12.col-sm-9
            input#date.form-control(type="date", name="date", required)

        .form-group.row
          label.col-10.col-sm-3.col-form-label(for="category") Category
          .col-12.col-sm-9
            select#category.form-control(name="category", required)
              option(value="Food & Drink") Food & Drink
              option(value="Transportation") Transportation
              option(value="Rent") Rent
              option(value="Groceries") Groceries
              option(value="Entertainment") Entertainment
              option(value="Other") Other

        button.btn.btn-primary.float-right(type="submit") Add Expense

      // Optional success or error message
      - var statusMessage = statusMessage || null
      if statusMessage
        .alert.alert-info.mt-3 #{statusMessage}

    // Left column for tips
    .col-12.col-md-6
      .card.mt-3
        .card-header
          h5 Tips for Managing Expenses
        .card-body
          p Here are some helpful tips to manage your spending:
          ul
            li 
              i.fas.fa-check-circle  // Font Awesome icon
              | Track daily expenses to stay on budget.
            li 
              i.fas.fa-check-circle
              | Review categories monthly for better insights.
            li 
              i.fas.fa-check-circle
              | Set reminders for recurring expenses.
            li 
              i.fas.fa-check-circle
              | Use apps to track your expenses effectively.
          p
           

    // Right column for financial education resources
    .col-12.col-md-6
      .card.mt-3
        .card-header
          h5 Financial Education Resources
        .card-body
          p Explore these resources to enhance your financial literacy:
          ul
            li 
              i.fas.fa-book
              a(href="https://www.investopedia.com", target="_blank") Investopedia - Your source for financial education
            li 
              i.fas.fa-graduation-cap
              a(href="https://www.khanacademy.org/college-careers-more/personal-finance", target="_blank") Khan Academy - Personal Finance
            li 
              i.fas.fa-chart-line
              a(href="https://www.smartaboutmoney.com", target="_blank") Smart About Money - Free financial education resources
          p
            